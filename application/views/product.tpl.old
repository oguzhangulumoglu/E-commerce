{include file="header.tpl"}

<div class="page-navigation">
    <div class="container">
        <div class="current-page pull-left">
            <span><i class="fa fa-fw fa-circle-o" aria-hidden="true"></i>lastik detayı</span>
        </div>
        <ol class="breadcrumb pull-right">
            <li><a href="{base_url()}">Anasayfa</a></li>
            <li>Ürün</li>
            <li class="active">{$name}</li>
        </ol>
    </div>
</div>

<section class="content" style="padding-top: 30px">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                {$ads["reklam_4"]|stripslashes}
                <script type="text/javascript">
                    google_ad_client = "ca-pub-6531020773925256";
                    google_ad_slot = "4241493358";
                    google_ad_width = 300;
                    google_ad_height = 250;
                </script>
                <!-- 300 -->
                <script type="text/javascript"
                        src="//pagead2.googlesyndication.com/pagead/show_ads.js">
                </script>
            </div>
            <div class="col-sm-9">
                <div class="wrapper">
                    <div class="page-header">
                        <h1 class="center-block">
                            {$name|capitalize}
                            <div class="pull-right" style="width: 200px; margin-top: -10px;">
                                <img src="{base_url($brand|get_data:"brand":"image")}" alt="" class="img-responsive"/>
                            </div>
                        </h1>
                    </div>
                    <div class="page-content">
                        <div class="row">
                            <div class="col-sm-6 col-md-5">
                                <div id="carousel-id2" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="item active">
                                            <figure><img src="{base_url("assets/images/no_image.jpg")}" alt="" style="max-height: 270px;" class="img-responsive center-block xzoom" xoriginal="" id="xzoom-default"></figure>
                                        </div>
                                    </div>
                                    <ol class="carousel-indicators">
                                        {foreach from=$select_img item=img}
                                            <li data-target="#carousel-id2" id="{$img->id}" data-slide-to="0">
                                                <img src="{base_url($img->image)}" style="height: auto; width: auto; max-height: 60px; max-width: 60px" alt="" class="img-responsive center-block">
                                            </li>
                                        {/foreach}
                                    </ol>
                                </div>
                            </div>

                            <div class="col-sm-6 col-md-7" style="padding: 10px 0">

                                <div class="co-md-12">
                                    <table class="table">
                                        <tr>
                                            <td style="border: 0">
                                                <span style="font-size: 16px">Mevsim</span>
                                            </td>
                                            <td style="border: 0">
                                                <span style="font-size: 16px">Lastik Boyutu</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 0">
                                                {if $season|get_data:"season":"name" eq "Yaz"}
                                                    <img src="{base_url("assets/img/sun.png")}" alt="" style="width: 32px;"/>
                                                {/if}
                                                {if $season|get_data:"season":"name" eq "Kış"}
                                                    <img src="{base_url("assets/img/kis.png")}" alt="" style="width: 32px;"/>
                                                {/if}
                                                <span style="font-weight: 600; font-size: 16px">{$season|get_data:"season":"name"}</span>
                                            </td>
                                            <td style="border: 0">
                                                <span style="font-weight: 600; font-size: 16px; padding-left: 20px;">
                                                    {$tire_width|get_data:"tire_width":"name"}/{$tire_rate|get_data:"tire_rate":"name"}R{$rim_diameter|get_data:"rim_diameter":"name"}
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 0">
                                                <span style="font-size: 16px">Ağırlık Endeksi</span>
                                            </td>
                                            <td style="border: 0">
                                                <span style="font-size: 16px">Hız İndeksi</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 0">
                                                <span style="font-weight: 600; font-size: 16px;padding-left: 33px;">
                                                   {$weight_index}
                                               </span>
                                            </td>
                                            <td style="border: 0">
                                               <span style="font-weight: 600; font-size: 16px; padding-left: 20px;">
                                                   {$speed_index|get_data:"speed_index":"name"}
                                               </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 0">
                                                <span style="font-size: 16px">Araç Kategori</span>
                                            </td>
                                            <td style="border: 0">
                                                <span style="font-size: 16px">Paylaş</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 0">
                                                <img src="{base_url($category|get_data:"category":"icon")}" class="img-responsive center-block"  data-toggle="tooltip" data-placement="top" title="{$category|get_data:"category":"name"}" style="height: 72px;" alt=""/>
                                            </td>
                                            <td style="border: 0">
                                                <ul class="social-network social-circle">
                                                    <li><a href="" target="_blank" class="icoFacebook" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                                    <li><a href="" target="_blank" class="icoTwitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                                </ul>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <h3 class="product-header" style="color: #CF2029;">Ürün Kalitesi</h3>
                                <ul class="tire-specs" style="margin-top: 20px">
                                    <li style="background-color: #fffac0;padding: 10px;margin-bottom:0;font-size: 16px;font-weight:400;color: #565656;">Güvenlik
                                        <ul class="rating big">
                                            {if $guvenlik eq "-"}
                                                <li>-</li>
                                            {else}
                                            <li><i class="fa fa-star {if $guvenlik < 1}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $guvenlik < 2}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $guvenlik < 3}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $guvenlik < 4}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $guvenlik < 5}grey{/if}" aria-hidden="true"></i></li>
                                            {/if}
                                        </ul>
                                    </li>
                                    <li style="margin-bottom:0;padding: 10px;font-size: 16px;font-weight:400;color: #565656;">Tasarruf
                                        <ul class="rating big">
                                            {if $tasarruf eq "-"}
                                            <li>-</li>
                                            {else}
                                            <li><i class="fa fa-star {if $tasarruf < 1}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $tasarruf < 2}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $tasarruf < 3}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $tasarruf < 4}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $tasarruf < 5}grey{/if}" aria-hidden="true"></i></li>
                                            {/if}
                                        </ul>
                                    </li>
                                    <li style="background-color: #fffac0;padding: 10px;font-size: 16px;font-weight:400;color: #565656;">Konfor
                                        <ul class="rating big">
                                            {if $konfor eq "-"}
                                                <li>-</li>
                                            {else}
                                            <li><i class="fa fa-star {if $konfor < 1}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $konfor < 2}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $konfor < 3}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $konfor < 4}grey{/if}" aria-hidden="true"></i></li>
                                            <li><i class="fa fa-star {if $konfor < 5}grey{/if}" aria-hidden="true"></i></li>
                                            {/if}
                                        </ul>
                                    </li>
                                </ul>
                            </div>

                            <div class="col-xs-12">
                                <h3 class="product-header" style="color: #CF2029;">Ürün Açıklaması</h3>
                                <div class="product-description">
                                    {$property}
                                </div>
                            </div>

                            <div class="col-xs-12">
                                <h3 class="product-sell-header" style="color: #CF2029;">Bu Ürünü Satın Almak İster Misiniz?</h3>
                                <div class="product row">
                                    <div class="product-top hidden-xs">
                                        <div class="col-xs-3">
                                            <h5>Online Mağazalar</h5>
                                        </div>
                                        <div class="col-xs-2">
                                            <h5>Fiyat</h5>
                                        </div>
                                        <div class="col-xs-7">
                                            <h5>Açıklama</h5>
                                        </div>
                                    </div>
                                    {foreach from=$online_merchants name=foo item=o_merchant}
                                    <div class="col-xs-12">
                                        <div class="product-wrapper {if $smarty.foreach.foo.index is even}lightgrey{else}darkgrey{/if}">
                                            <div class="row row-sm-flex">
                                                <div class="col-xs-12 col-sm-3">
                                                    <figure><img src="{if $o_merchant->logo}{base_url($o_merchant->logo)}{else}{base_url("assets/img/bayilogo1.png")}{/if}" alt="" class="img-responsive center-block" style="width: 20%;" ></figure>
                                                </div>
                                                <div class="col-xs-12 col-sm-2">
                                                    <span class="price">{$o_merchant->amount} TL</span>
                                                </div>
                                                <div class="col-xs-12 col-sm-4">
                                                    <p>Türkiye'nin her yerine ücretsiz kargo.</p>
                                                    <p>Sorularınıza hızlı cevap alabilirsiniz</p>
                                                </div>
                                                <div class="col-xs-12 col-sm-3">
                                                    <a href="{$o_merchant->url}" target="_blank" class="btn btn-red">SATIN AL <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {foreachelse}
                                    <div class="col-xs-12">
                                        <div class="row">
                                            <span style="padding: 0 40px;">Bu ürüne ait, online bayi bulunmamaktadır.</span>
                                        </div>
                                    </div>
                                    {/foreach}

                                    <div class="product-top hidden-xs">
                                        <div class="col-xs-3">
                                            <h5>Bayiden Satın Al</h5>
                                        </div>
                                        <div class="col-xs-2">
                                            <h5>Fiyat</h5>
                                        </div>
                                        <div class="col-xs-2">
                                            <h5>Yıl</h5>
                                        </div>
                                        <div class="col-xs-5">
                                            <h5>İl/İlçe</h5>
                                        </div>
                                    </div>
                                    {foreach from=$normal_merchants name=foo2 item=n_merchant}
                                    <div class="col-xs-12">
                                        <div class="product-wrapper {if $smarty.foreach.foo2.index is even}lightgrey{else}darkgrey{/if}">
                                            <div class="row row-sm-flex">
                                                <div class="col-sm-3">
                                                    <figure><img src="{if $n_merchant->logo}{base_url($n_merchant->logo)}{else}{base_url("assets/img/bayilogo1.png")}{/if}" alt="" class="img-responsive center-block" style="width: 20%;" ></figure>
                                                </div>
                                                <div class="col-sm-2">
                                                    <span class="price">{$n_merchant->amount} TL</span>
                                                </div>
                                                <div class="col-sm-2">
                                                    <span class="price">{$n_merchant->yyear}</span>
                                                </div>
                                                <div class="col-sm-3">
                                                    <p class="location">{$n_merchant->city|get_data:"city":"city"|capitalize}, <strong>{$n_merchant->state|get_data:"state":"state"|capitalize}</strong></p>
                                                </div>
                                                <div class="col-sm-2">
                                                    <a href="javascript:void(0)" onclick="addCartModule('{$n_merchant->id}','1', '{$n_merchant->mid}');" class="btn btn-red">SEPETE EKLE <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {foreachelse}
                                        <div class="col-xs-12">
                                            <div class="row">
                                                <span style="padding: 0 40px;">Bu ürüne ait, normal bayi bulunmamaktadır.</span>
                                            </div>
                                        </div>
                                    {/foreach}
                                </div>
                            </div>



                            <div class="col-xs-12">
                                <h3 class="small-header" style="color: #CF2029;">Ürün Hakkında Yapılan Yorumlar</h3>

                                <div class="col-md-12">

                                    {foreach from=$comment name=foo2 item=comments}

                                        {if $company eq $comments->name|capitalize}

                                            <div class="row">
                                                <div class="col-sm-2 hidden-sm" style="margin-bottom: 15px">
                                                    <div>
                                                        <img class="img-responsive img-circle user-photo" src="{if $company eq $comments->name|capitalize}{if $logo}{base_url($logo)}{else}{base_url("assets/images/no_image.jpg")}{/if}{else}https://ssl.gstatic.com/accounts/ui/avatar_2x.png{/if}">
                                                    </div>
                                                </div>

                                                <div class="col-sm-10" style="margin-bottom: 15px">
                                                    <div class="panel panel-default" style="border-radius: 5px 5px 0 0;">
                                                        <div class="panel-heading" style="padding: 5px 15px; background-color: #cf2029;color: #fff;">
                                                            <strong>{$comments->name|capitalize}</strong>
                                                            <span class="text-muted" style="font-size: 12px; color: #e6e4e4"> {$comments->create_time|c_ago}</span>
                                                <span class="like pull-right">
                                                    <a href="javascript:void(0)" class="like" onclick="like({$comments->id})">
                                                        <i class="glyphicon glyphicon-thumbs-up"></i> <strong id="comment-like-{$comments->id}">( {$comments->like} )</strong>
                                                    </a>
                                                    <a href="javascript:void(0)" class="unlike" onclick="unlike({$comments->id})" style="background-color: #000">
                                                        <i class="glyphicon glyphicon-thumbs-down"></i> <strong id="comment-unlike-{$comments->id}">( {$comments->unlike} )</strong>
                                                    </a>
                                                </span>
                                                        </div>
                                                        <div class="panel-body">
                                                            {$comments->text|capitalize}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        {else}

                                            <div class="row">
                                                <div class="col-md-2 hidden-sm" style="margin-bottom: 15px">
                                                    <div>
                                                        <img class="img-responsive img-circle user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
                                                    </div>
                                                </div>

                                                <div class="col-md-10" style="margin-bottom: 15px">
                                                    <div class="panel panel-default" style="border-radius: 5px 5px 0 0;">
                                                        <div class="panel-heading" style="padding: 5px 15px;">
                                                            <strong>{$comments->name|capitalize}</strong>
                                                            <span class="text-muted" style="font-size: 12px"> {$comments->create_time|c_ago}</span>
                                                            <span class="like pull-right">
                                                                <a href="javascript:void(0)" class="like" onclick="like({$comments->id})">
                                                                    <i class="glyphicon glyphicon-thumbs-up"></i> <strong id="comment-like-{$comments->id}">( {$comments->like} )</strong>
                                                                </a>
                                                                <a href="javascript:void(0)" class="unlike" onclick="unlike({$comments->id})">
                                                                    <i class="glyphicon glyphicon-thumbs-down"></i> <strong id="comment-unlike-{$comments->id}">( {$comments->unlike} )</strong>
                                                                </a>
                                                            </span>
                                                            <span class="star">
                                                                <ul class="rating">
                                                                    <li><i class="fa fa-star {if $comments->rating != '0' || $comments->rating eq 1}{else}grey{/if}" aria-hidden="true"></i></li>
                                                                    <li><i class="fa fa-star {if $comments->rating != '0' || $comments->rating eq 1 || $comments->rating eq 2}{else}grey{/if}" aria-hidden="true"></i></li>
                                                                    <li><i class="fa fa-star {if $comments->rating != '0' || $comments->rating eq 1 || $comments->rating eq 2 || $comments->rating eq 3}{else}grey{/if}" aria-hidden="true"></i></li>
                                                                    <li><i class="fa fa-star {if $comments->rating != '0' || $comments->rating eq 1 || $comments->rating eq 2 || $comments->rating eq 3 || $comments->rating eq 4}{else}grey{/if}" aria-hidden="true"></i></li>
                                                                    <li><i class="fa fa-star {if $comments->rating != '0' || $comments->rating eq 1 || $comments->rating eq 2 || $comments->rating eq 3 || $comments->rating eq 4 || $comments->rating eq 5}{else}grey{/if}" aria-hidden="true"></i></li>
                                                                </ul>
                                                            </span>
                                                        </div>
                                                        <div class="panel-body">
                                                            {$comments->text|capitalize}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        {/if}

                                        {foreachelse}
                                        <div class="col-md-12">
                                            <div class="comment-body">
                                                <p>Üzgünüm, Herhangi bir yorum yapılmamıştır. İlk yorumu siz yapabilirsiniz</p>
                                            </div>
                                        </div>
                                    {/foreach}

                                </div>
                            </div>

                            <div class="col-xs-12">

                                <form action="#" name="commentss" method="post" class="comment-form" style="padding: 20px; border-radius: 5px">

                                    <div class="panel panel-default" style="border-radius: 5px 5px 0 0;">
                                        <div class="panel-heading" style="padding: 5px 15px;">
                                            <strong> Yorum Yap</strong>
                                        </div>
                                        <div class="panel-body" style="padding: 20px 0">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="col-md-12" style="padding-right: 0px">
                                                        <div class="form-group">
                                                            <input type="text" name="name" class="form-control required" placeholder="Adınız Soyadınız" required style="border-radius: 5px">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12" style="padding-right: 0px">
                                                        <div class="form-group">
                                                            <input type="text" name="subject" class="form-control" placeholder="Yorum Başlığı" required style="border-radius: 5px">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-8">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <textarea name="text" id="" cols="30" rows="5" class="form-control" placeholder="Yorumunuz" required style="border-radius: 5px"></textarea>
                                                        </div>
                                                    </div>
                                                    <input type="hidden" name="type" value="product"/>
                                                    <input type="hidden" name="rating" value="0"/>
                                                    <input type="hidden" name="merchantID" value="{$id}"/>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="col-md-4">
                                                        <div class="col-md-5" style="border: 1px solid #e2e2e2; border-radius: 5px; height: 55px;border-right: 0;">
                                                            <span><strong style="font-weight: 500;line-height: 52px;">Puan ver</strong></span>
                                                        </div>

                                                        <div class="col-md-7" style="border: 1px solid #e2e2e2; border-radius: 5px;border-left: 0;">
                                                            <ul class="rating">
                                                                <li><i class="fa fa-star grey" data-value="1" aria-hidden="true"></i></li>
                                                                <li><i class="fa fa-star grey" data-value="2" aria-hidden="true"></i></li>
                                                                <li><i class="fa fa-star grey" data-value="3" aria-hidden="true"></i></li>
                                                                <li><i class="fa fa-star grey" data-value="4" aria-hidden="true"></i></li>
                                                                <li><i class="fa fa-star grey" data-value="5" aria-hidden="true"></i></li>
                                                                <li><strong class="note">(<span>0</span>)</strong></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <a id="postComment" class="btn btn-red" style="margin:0 6px; border-radius: 5px;padding: 15px 0; font-weight:700; font-size: 16px">Yorumu Gönder</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{include file="footer.tpl"}